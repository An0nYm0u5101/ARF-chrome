{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "omnibox": { "keyword" : "arf" },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bower_components/lodash/lodash.js",
      "bower_components/jquery/dist/jquery.js",
      "bower_components/q/q.js",
      "bower_components/fuse.js/src/fuse.min.js",
      "scripts/chromereload.js",
      "scripts/background.js",
      "scripts/omnibox.js"
    ]
  },
  "permissions": [
    "bookmarks",
    "storage",
    "http://evanbooth.com/*",
    "alarms",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-16.png",
      "38": "images/icon-128.png"
    },
    "default_title": "Advanced Reconnaissance Framework",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
